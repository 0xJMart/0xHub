{
  "name": "0xhub",
  "private": true,
  "workspaces": [
    "frontend",
    "packages/shared/*"
  ],
  "scripts": {
    "install:frontend": "npm install --workspace frontend",
    "prepare": "husky",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "typecheck": "npm run typecheck --if-present --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --if-present --workspaces",
    "storybook": "npm run storybook --workspace frontend"
  },
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.8.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx,css,json,md}": [
      "npm exec --workspace frontend -- prettier --write",
      "npm exec --workspace frontend -- eslint --fix"
    ],
    "services/hub-api/**/*.go": "/home/admin/go/bin/gofmt -w"
  }
}
